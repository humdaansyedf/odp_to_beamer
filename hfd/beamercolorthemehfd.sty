\mode<presentation>

%%
%% Define some general colors in RGB.
%%
\definecolor{black}{RGB}{0,0,0}
\definecolor{white}{RGB}{255,255,255}
\definecolor{red}{RGB}{255,0,0}
\definecolor{gray}{RGB}{125,125,125}
\definecolor{lightgray}{RGB}{200,200,200}

\definecolor{hsfd_red}{RGB}{172,27,33}
\definecolor{hsfd_red_light}{RGB}{238,210,211}
\definecolor{hsfd_red_lighter}{RGB}{251,246,246}

\definecolor{tablehead}{rgb}{0.912,0.932,1}
\definecolor{tablegray}{rgb}{0.96,0.96,0.96}


%%
%% Define some theme-specific colors
%% for various beamer elements
%%
\setbeamercolor{title}{fg=black}
\setbeamercolor{subtitle}{fg=black}
\setbeamercolor{section in toc}{fg=black}
\setbeamercolor{subsection in toc}{fg=black}

%% Header
\setbeamercolor{text in header}{bg=white,fg=gray}
\setbeamercolor{line in header}{bg=white,fg=hsfd_red}


%% Footer
\setbeamercolor{text in footer}{bg=white,fg=gray}
\setbeamercolor{line in footer}{bg=white,fg=hsfd_red}


%% Sidebar
\setbeamercolor{section in sidebar}{bg=hsfd_red_light,fg=hsfd_red}
\setbeamercolor{section in sidebar shaded}{bg=hsfd_red_lighter,fg=hsfd_red_light}

\setbeamercolor{frameno in head/foot}{bg=white,fg=black}
\setbeamercolor{section in sidebar}{bg=hsfd_red_light,fg=hsfd_red}
\setbeamercolor{section in sidebar shaded}{bg=hsfd_red_lighter,fg=hsfd_red_light}

%% Main part
\setbeamercolor{section in main}{bg=lightgray,fg=black}
\setbeamercolor{itemize item}{fg=hsfd_red}
\setbeamercolor{itemize subitem}{fg=hsfd_red}
\setbeamercolor{itemize subsubitem}{fg=hsfd_red}
\setbeamercolor{enumerate item}{fg=black,bg=hsfd_red}
\setbeamercolor{enumerate subitem}{fg=hsfd_red}
\setbeamercolor{enumerate subsubitem}{fg=hsfd_red}

\setbeamercolor{block title}{bg=red!30,fg=black}
\setbeamercolor{block body}{bg=gray!10}

\mode<all>
